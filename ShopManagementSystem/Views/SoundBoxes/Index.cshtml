@model IEnumerable<ShopManagementSystem.Models.SoundBox>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ShopId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ItemPlan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NoOfItems)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ShopName.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ItemPlan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NoOfItems)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total)
            </td>           
            <td>
                <a asp-action="Edit" asp-route-id="@item.SoundBoxId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.SoundBoxId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.SoundBoxId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
